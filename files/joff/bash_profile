#coloured less
export LESS="-erX"

alias gs='git status '
alias gu='git up '
alias ga='git add '
alias gb='git branch '
alias gc='git commit'
alias gd='git difftool'
alias gp='git push '
alias prune='git remote prune origin'
alias publish='git publish origin'

alias ll='ls -l '
alias la='ls -a '
alias lla='ls -la '

alias zx='zeus'
alias be='bundle exec'
alias d='docker'
alias dockergc='docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v /etc:/etc spotify/docker-gc'
alias ls='ls -G'

alias bundlestubs="bundle install --binstubs .bundle/bin"

alias ffs="sudo !!"

alias ne="PATH=$(npm bin):$PATH "

eval "$(rbenv init -)"

if [ -f ~/.bashrc ]; then
  source ~/.bashrc
fi

export PATH=$PATH:/usr/local/sbin

export EDITOR=vim

. `brew --prefix`/etc/profile.d/z.sh

if [ -f $(brew --prefix)/etc/bash_completion ]; then
        . $(brew --prefix)/etc/bash_completion
fi

complete -C aws_completer aws
